<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead class="thead">
    <tr>
      <th>Name</th>
      <th>Adress</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.adress %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-outline-link' %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', order ,class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class: 'btn btn-success'  %>
