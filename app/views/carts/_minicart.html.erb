<h4 class="d-flex justify-content-between align-items-center mb-3">
  <span class="text-muted">Ihr Einkaufswagen</span>
  <% if @cart %>
    <% items = @cart.line_items.to_a.sum {|item| item.quantity} %>
      <% if items > 0 %>
        <span class="badge badge-secondary badge-pill"><%= items %></span>
      <% end %>
    <%end%>
  </h4>
  <ul class="list-group mb-3">
    <% @cart.line_items.each do |litem| %>
      <li class="list-group-item d-flex justify-content-between lh-condensed">

        <div>
          <h6 class="my-0"><%=litem.product.title%></h6>
          <small class="text-muted"><%=litem.product.description%></small>
        </div>
        <span class="text-muted"><%=litem.quantity%> x €<%=litem.product.price%> = €<%= litem.quantity*litem.product.price %></span>
      </li>
    <%end%>
